generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./bible.db"
}

model Book {
  name String @unique
  chapters Chapter[]
  @@map("books")
}

model Chapter {
  number Int
  verses  Verse[]

  book Book? @relation(fields: [bookName], references: [name])
  bookName String

  @@map("chapters")
  @@unique([number, bookName])
}

model Verse {
  number Int
  text  String

  chapter Chapter? @relation(fields: [chapterNumber, bookName], references: [number, bookName])
  chapterNumber Int
  bookName String

  @@map("verses")
  @@unique([bookName, chapterNumber, number])
}
